{
  "name": "desktop-ai",
  "version": "0.0.4",
  "description": "Desktop AI Client - A cross-platform desktop application for AI chat, built with Electron.",
  "type": "module",
  "main": "index.js",
  "bin": {
    "desktop-ai": "cli.cjs"
  },
  "keywords": [
    "ai",
    "desktop",
    "client",
    "chat",
    "electron",
    "application",
    "cross-platform",
    "open-source"
  ],
  "scripts": {
    "test": "mocha test/**/*.test.js",
    "start": "electron .",
    "build": "electron-builder",
    "format": "prettier --write .",
    "lint": "prettier --check ."
  },
  "author": "@danchev",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/danchev/desktop-ai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danchev/desktop-ai.git"
  },
  "devDependencies": {
    "chai": "^5.2.0",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-winstaller": "^5.4.0",
    "mocha": "^11.5.0",
    "prettier": "^3.5.3",
    "proxyquire": "^2.1.3",
    "sinon": "^20.0.0"
  },
  "dependencies": {
    "electron-store": "^10.0.1"
  },
  "build": {
    "appId": "net.danchev.desktop-ai",
    "productName": "desktop-ai",
    "artifactName": "${productName}.${ext}",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Chat"
    }
  }
}
